<Window x:Class="MaterialEditor.Controls.ProjectLocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaterialEditor.Controls"
        xmlns:materialEditor="clr-namespace:MaterialEditor"
        mc:Ignorable="d"
        Title="Project Preferences" Height="450" Width="256">
    <StackPanel>
        <materialEditor:FilePicker Label="Project Location" SelectionType="Folder" FileSelected="FilePicker_OnFileSelected" Margin="0,5,0,10" x:Name="ProjLocPicker" ShouldBeInProject="False"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" HorizontalAlignment="Left" Width="64" Margin="0,0,5,0" Click="Save_OnClick"/>
            <Button Content="Cancel" HorizontalAlignment="Right" Width="64" Margin="5,0,0,0" Click="Cancel_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
